<% if x != current_user %>
  <% if current_user.following?(x) %>
    <!-- 會用 DELETE 動作導向 http://localhost:3000/followships/{user.id} -->
    <%= link_to 'Unfollow', followship_path(x), method: :delete, class: "btn btn-link" %>
  <% else %>
    <!-- 會用 POST 動作導向 http://localhost:3000/followships?following_id={user.id} -->
    <%= link_to 'Follow', followships_path(following_id: x), method: :post, class: "btn btn-default" %>
  <% end %>
<% end %>